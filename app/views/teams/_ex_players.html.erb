<% @team.ex_players.each do |player| %>
  <% ptr = @team.player_team_relationships.where(:player_id => player.id).first %>
  <% gameweek_in = ptr.gameweek_in %>
  <% gameweek_out = ptr.gameweek_out %>
  <% captain = ptr.captain %>
  <tr>
    <td><%= link_to player.common_name, player %><%= ' (c)' if captain %></td>
    <td><%= player.position %></td>
    <td><%= link_to player.premier_league_team.name, player.premier_league_team %></td>
    <td><%= gameweek_in %></td>
    <td><%= gameweek_out %></td>
    <% (1..@gameweek).each do |i| %>
      <td><%= (gameweek_out > i) ? (player.gameweek_points[i].to_i * (captain ? 2 : 1)) : 0 %></td>
    <% end %>
  </tr>
<% end %>
