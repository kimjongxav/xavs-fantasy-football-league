<% provide(:title, @team.name) %>
<div class='title-bar'>
  <div class='main-title'>
    <%= @team.name %>
    <%= @team.formation %>
  </div>
</div>

<div class="list">
  <h3>Manager: <%= @team.user.name %></h3>
  <h4>Transfers remaining: <%= 8 - @team.ex_players.where('player_id <> ?', @team.current_captain.id).count %></h4>
  <table class='nice-table striped'>
    <thead>
      <tr>
        <th style="width: 130px">player</th>
        <th>position</th>
        <th>pl team</th>
        <th>gameweek in</th>
        <% (1..@team.gameweek).each do |i| %>
          <th><%= "GW#{i}" %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render 'current_players' %>
    </tbody>
  </table>
  <br>
  <h3>Ex-players</h3>
  <table class='nice-table striped'>
    <thead>
      <tr>
        <th style="width: 130px">player</th>
        <th>position</th>
        <th>pl team</th>
        <th>gameweek in</th>
        <th>gameweek out</th>
        <% (1..@team.gameweek).each do |i| %>
          <th><%= "GW#{i}" %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render 'ex_players' %>
    </tbody>
  </table>
</div>
