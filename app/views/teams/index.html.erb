<% provide(:title, 'Leaderboard') %>
<h1>Leaderboard</h1>

<%= will_paginate %>

<div class="list">
  <li>
    <table class='nice-table striped'>
      <thead>
        <tr>
          <th style="width: 200px">team</th>
          <th>W</th>
          <th>L</th>
          <th>TW</th>
          <th>BW</th>
          <th>OS</th>
          <th>WF</th>
          <th>P</th>
          <th>S</th>
        </tr>
      </thead>
      <tbody>
        <%= render @teams.sort_by { |team| -team['gameweek_scores'].values.inject(:+) } %>
      </tbody>
    </table>
  </li>
</div>

<%= will_paginate %>
